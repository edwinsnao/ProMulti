<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/background_login"
        android:layout_width="match_parent"
        android:layout_weight="1.25"
        android:layout_height="0dip">
        <ImageView
            android:layout_width="100dip"
            android:id="@+id/circle"
            android:scaleType="fitXY"
            android:src="@drawable/girl1"
            android:layout_height="100dip"
            android:layout_below="@+id/name"
            android:layout_alignRight="@+id/btn"
            android:layout_alignEnd="@+id/btn"
            android:layout_marginTop="29dp" />

        <TextView
            android:layout_marginTop="10dip"
            android:id="@+id/name"
            android:text="林发钊"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/graywhite"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btn"
            android:layout_alignStart="@+id/btn" />
        <ImageButton
            android:id="@+id/zhuanfa"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/name"
            android:src="@drawable/ic_menu"
            android:layout_width="30dip"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_height="30dip" />

        <TextView
            android:id="@+id/fens"
            android:text="粉丝:125"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/graywhite"
            android:layout_alignTop="@+id/circle"
            android:layout_toLeftOf="@+id/zhuanfa"
            android:layout_toStartOf="@+id/zhuanfa" />
        <TextView
            android:id="@+id/renqi"
            android:text="人气:1,255万人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/graywhite"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignBottom="@+id/circle"
            android:layout_toLeftOf="@+id/circle"
            android:layout_toStartOf="@+id/circle" />
        <TextView
            android:id="@+id/huoyuedu"
            android:text="活跃度:125"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/graywhite"
            android:layout_alignTop="@+id/renqi"
            android:layout_alignLeft="@+id/fens"
            android:layout_alignStart="@+id/fens" />
        <TextView
            android:id="@+id/guanzhu"
            android:text="关注:125"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/graywhite"
            android:layout_alignTop="@+id/circle"
            android:layout_alignLeft="@+id/renqi"
            android:layout_alignStart="@+id/renqi" />
        <Button
            android:id="@+id/btn"
            android:text="关注"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:layout_marginTop="29dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/graywhite"
            android:layout_width="wrap_content"
            android:background="@drawable/button_style_2"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle"
            android:layout_centerHorizontal="true" />
     <!--   <com.astuetz.PagerSlidingTabStrip
            android:layout_alignParentBottom="true"
            android:id="@+id/tabstrip"
            android:background= "#00000000"
            app:pstsDividerPadding="10dip"
            app:pstsTabPaddingLeftRight="10dip"
            app:pstsShouldExpand="true"
            app:pstsDividerColor= "#00000000"


            app:pstsIndicatorHeight= "0dip"

            android:layout_width="match_parent"
            android:layout_height="38dip"

            />-->
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        />
</LinearLayout>