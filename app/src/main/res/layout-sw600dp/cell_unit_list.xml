<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="10dip"
        android:id="@+id/img_list"
        android:src="@drawable/girl"
        android:layout_marginLeft="10dip"
        android:scaleType="fitXY"
        android:layout_width="100dip"
        android:layout_height="100dip" />
    <TextView
        android:layout_marginTop="5dip"
        android:id="@+id/txt0"
        android:textColor="@color/white"
        android:background="@color/link_color"
        android:text="带我走吧"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_list"
        android:layout_toRightOf="@+id/img1"
        android:layout_toEndOf="@+id/img1" />
    <ImageView
        android:id="@+id/img1"
        android:layout_below="@id/txt0"
        android:src="@android:drawable/ic_menu_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dip"
        android:layout_below="@id/txt0"
        android:layout_toRightOf="@id/img1"
        android:id="@+id/txt1"
        android:text="4521"
        android:textColor="@color/link_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/img2"
        android:layout_toRightOf="@id/txt1"
        android:layout_below="@id/txt0"
        android:src="@android:drawable/ic_menu_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dip"
        android:layout_below="@id/txt0"
        android:layout_toRightOf="@id/img2"
        android:id="@+id/txt2"
        android:text="18"
        android:textColor="@color/link_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/img_list"
        android:textColor="@color/link_color"
        android:id="@+id/title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="居酒屋"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/title"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/img_list"
        android:id="@+id/mudidi"
        android:text="目的地:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/img_list"
        android:layout_below="@id/mudidi"
        android:textColor="@color/green"
        android:id="@+id/dest"
        android:text="Santa Monica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/dest"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/img_list"
        android:id="@+id/huodong"
        android:text="活动日期:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/img_list"
        android:layout_below="@id/huodong"
        android:textColor="@color/green"
        android:id="@+id/time"
        android:text="2016.05.05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/time"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/img_list"
        android:id="@+id/biaoqian"
        android:text="活动标签:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="@color/link_color"
        android:background="@drawable/button_style_2"
        android:id="@+id/tag"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:focusable="false"
        android:clickable="false"
        android:text="酒吧"
        android:layout_toRightOf="@id/img_list"
        android:layout_below="@id/biaoqian"
        android:layout_width="60dip"
        android:layout_height="25dip"
         />

</RelativeLayout>