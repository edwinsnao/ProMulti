<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <Button
        android:id="@+id/putSerial"
        android:text="putSerialLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/clearSerial"
        android:text="clearSerialLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/putParcel"
        android:text="putParcelableBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/clearParcel"
        android:text="clearParcelableBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>