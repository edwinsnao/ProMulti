<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="fill_parent"
                                             android:layout_height="match_parent"
    >

    <TextView
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:id="@+id/id_title"
        android:transitionName="@string/share_title"
        android:layout_width="352dp"
        android:layout_height="25dp"
        android:textColor="@color/black2"
        android:textStyle="bold"
        android:text="如何有效地在海外市场推广产品？"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/id_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintVertical_bias="0.22000003"
        app:layout_constraintHorizontal_bias="0.0"/>




    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/id_content"
        android:layout_width="247dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:maxLines="3"
        android:singleLine="false"
        android:ellipsize="end"
        android:text="3D打印机一直以来只能进行单向操作，任务一旦开始便无法反悔。不过最近一批研究生研发了一种新型打印机，让你在打印的同时，可以修改重塑之前的设计。让我们一起来看看这个神奇的设备究竟是怎样的吧。"
        android:textColor="@color/nomalGray"
        android:textSize="14sp"
        tools:layout_conversion_absoluteX="121dp"
        tools:layout_conversion_absoluteY="57dp"
        tools:layout_conversion_absoluteWidth="247dp"
        tools:layout_conversion_absoluteHeight="33dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/id_newsImg"/>


    <TextView
        android:id="@+id/id_date"
        android:layout_width="247dp"
        android:layout_height="22dp"
        android:gravity="right"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="13分钟前|11次阅读"
        android:textColor="@color/nomalGray"
        android:textSize="12sp"
        tools:layout_conversion_absoluteX="121dp"
        tools:layout_conversion_absoluteY="110dp"
        tools:layout_conversion_absoluteWidth="247dp"
        tools:layout_conversion_absoluteHeight="22dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/id_newsImg"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/id_content"
        />

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_width="92dp"
        android:layout_height="92dp"
        app:srcCompat="@drawable/images"
        android:id="@+id/id_newsImg"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_content"
        app:layout_constraintRight_toLeftOf="@+id/id_date"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"/>


    <!-- <TextView
        android:id="@+id/availableNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nomalGray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_mark_pressed"
        android:text="可借：4"
        android:textSize="13sp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_centerVertical="true"
         /> -->

</android.support.constraint.ConstraintLayout>