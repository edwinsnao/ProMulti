<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@null" />
            <corners android:radius="5dip" />
            <size android:width="@dimen/activity_horizontal_margin" android:height="@dimen/activity_vertical_margin" />
            <stroke android:width="2dp" android:color="@color/background_white" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@null" />
            <corners android:radius="5dip" />
            <size android:width="@dimen/activity_horizontal_margin" android:height="@dimen/activity_vertical_margin" />
            <stroke android:width="2dp" android:color="@color/background_white" />
        </shape>
        <scale android:scaleGravity="center" android:scaleHeight="20dp" android:scaleWidth="30dp" />
    </item>
</selector>